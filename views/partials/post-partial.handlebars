<div class="flex flex-col p-3 gap-3 transition-all duration-300">
    <div class="flex justify-between items-center">
        <h1 class="text-2xl">{{title}}</h1>
            <p>{{updatedAt}}</p>
        <div class="flex gap-3 items-center">
            <div onclick="toggleContent(event)" class="hover:cursor-pointer btn-blue" title="show/hide message">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M11 15l-3-3m0 0l3-3m-3 3h8M3 12a9 9 0 1118 0 9 9 0 01-18 0z" />
                </svg>
            </div>
            <button href="" class="btn-blue">Edit</button>
            <button onclick="del({{id}})" class="btn-grey">X</button>
        </div>
    </div>
    <div class="hidden">{{content}}</div>
</div>