<section class="max-w-xl mx-auto flex flex-col gap-8 p-8">
        <h1 class="text-2xl">Login</h1>
    
    <form class="space-y-8">
        <div>
            <input id="login-email" type="email" class="bg-slate-100 mt-0 block w-full px-0.5 border-0 border-b-2 border-gray-200 focus:ring-0 focus:border-blue-500" placeholder="username or email">
        </div>
        <div>
            <input id="login-password" type="password" class="bg-slate-100 mt-0 block w-full px-0.5 border-0 border-b-2 border-gray-200 focus:ring-0 focus:border-blue-500" placeholder="password">
        </div>
        <div class="flex gap-5 items-center">
            <button id="login-login-btn" class="px-4 py-2 bg-blue-600 text-slate-100 rounded-sm">Login</button>
            <p class="text-sm">or</p>
            <a href="/signup" id="login-signup-btn" class="px-4 py-2 bg-slate-300 text-black rounded-sm">Sign up</a>
        </div>
    </form>
    <p id="login-warning" class="text-red-600"></p>
</section>

<script src="./js/login.js"></script>