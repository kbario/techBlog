<section class="max-w-xl mx-auto flex flex-col gap-8 p-8">
        <h1 class="text-2xl">Sign up</h1>
<form class="space-y-8">
        <div class="flex gap-8">
            <input id="first-name" type="text" class="form-input form-inputs" placeholder="First Name">
            <input id="last-name" type="text" class="form-input form-inputs" placeholder="Last Name">
        </div>
        <div>
            <input id="username" type="text" class="form-input form-inputs" placeholder="custom username">
        </div>
        <div>
            <input id="email" type="email" class="form-input form-inputs" placeholder="example@example.com">
        </div>
        <div>
            <input id="password" type="password" class="form-input form-inputs" placeholder="password">
        </div>
        <div>
            <input id="password-confirm" type="password" class="form-input form-inputs" placeholder="confirm password">
        </div>
        <div class="flex gap-5 items-center">
            <button id="signup-btn" class="btn-blue">Sign up</button>
            <p class="text-sm">or</p>
            <a href="/login" class="btn-grey">Login</a>
        </div>
        <p id="signup-warning" class="text-red-600"></p>
</form>
</section>

<script src="./js/signup.js"></script>