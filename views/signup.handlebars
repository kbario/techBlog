<section class="max-w-xl mx-auto flex flex-col gap-8 p-8">
        <h1 class="text-2xl">Sign up</h1>
<form class="space-y-8">
        <div class="flex gap-8">
            <input id="first-name" type="text" class="bg-slate-100 mt-0 block w-full px-0.5 border-0 border-b-2 border-gray-200 focus:ring-0 focus:border-blue-500" placeholder="First Name">
            <input id="last-name" type="text" class="bg-slate-100 mt-0 block w-full px-0.5 border-0 border-b-2 border-gray-200 focus:ring-0 focus:border-blue-500" placeholder="Last Name">
        </div>
        <div>
            <input id="username" type="text" class="bg-slate-100 mt-0 block w-full px-0.5 border-0 border-b-2 border-gray-200 focus:ring-0 focus:border-blue-500" placeholder="custom username">
        </div>
        <div>
            <input id="email" type="email" class="bg-slate-100 mt-0 block w-full px-0.5 border-0 border-b-2 border-gray-200 focus:ring-0 focus:border-blue-500" placeholder="example@example.com">
        </div>
        <div>
            <input id="password" type="password" class="bg-slate-100 mt-0 block w-full px-0.5 border-0 border-b-2 border-gray-200 focus:ring-0 focus:border-blue-500" placeholder="password">
        </div>
        <div>
            <input id="password-confirm" type="password" class="bg-slate-100 mt-0 block w-full px-0.5 border-0 border-b-2 border-gray-200 focus:ring-0 focus:border-blue-500" placeholder="confirm password">
        </div>
        <div class="flex gap-5 items-center">
            <button id="signup-btn" class="px-4 py-2 bg-blue-600 text-slate-100 rounded-sm">Sign up</button>
            <p class="text-sm">or</p>
            <a href="/login" id="login-btn" class="px-4 py-2 bg-slate-300 text-black rounded-sm">Login</a>
        </div>
        <p id="warning" class="text-red-600"></p>
</form>
</section>
<script src="./js/signup.js"></script>